   journal = {Molecular Systems Biology},
   keywords = {15252,20156590,accepted 23 november 2015,biotechnology,doi 10,modeling,msb,november 2015,quorum sensing,received 18 september 2015,revised 19,spatial patterning,subject categories signal transduction,synthetic biology},
   pages = {849},
