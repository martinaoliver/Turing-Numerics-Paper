   doi = {10.1016/j.cels.2015.10.002},
   issn = {24054712},
   issue = {4},
   journal = {Cell Systems},
   keywords = {clock and wavefront,molecular patterning,network topology,reaction-diffusion,somitogenesis,systems biology},
